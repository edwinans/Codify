{% extends 'base.html.twig' %}

{% block title user.username %}

{% block body %}
	<ul>
		<li>
			{{user.username}}
		</li>
		<li>
			{{user.email}}
		</li>
		<li>
			{% if is_granted('ROLE_ENSEIGNANT')  %}
				Vous etes un enseignant
			{% else %}
				Vous etes un eleve
			{% endif %}
		</li>
	</ul>
    {% if is_granted('ROLE_ENSEIGNANT')  %}
        <h1> Voici les exercices que vous avez créé </h1>
            <div class="row">
			{% for exercice in exercices %}
				<div class="col-md-4">
					{% include( 'exercice/_exercice.html.twig') %}
				</div>
				<div>
					{% for resolution in exercice.resolutions %}
						<h6> 
							This have been resolved by {{resolution.user.username}} in {{resolution.tentatives}} 
						</h6>
					{% endfor %}
					
				</div>
			{% endfor %}
		</div>
    {% endif %}
    

{% endblock %}
