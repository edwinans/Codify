{% extends 'base.html.twig' %}
{% block title "Se connecter" %}

{% block body %}
	<div class="container mt-4">
		{% for message in app.flashes('mustLogin') %}
			<div class="alert alert-danger">
				{{message}}
			</div>

		{% endfor %}
        {% if error %}
            <div class="alert alert-danger">
               {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        
		<form action="{{ path('login')}}" method="post">
			<div class="form-group">
				<label for="username">
					Nom d'utilisation</label>
				<input type="text" id="username" name="_username" class="form-control" value={{last_username}}>
			</div>
			<div class="form-group">
				<label for="password">
					Mot de passe
				</label>
				<input type="password" id="password" name="_password" class="form-control">
			</div>
        
			<button type="submit" class="btn btn-primary">Se connecter</button>
            </form>
			<a href={{path('security_registration')}}> Pas encore de compte ? Inscrivez-vous ici!</a>
		</div>
	{% endblock %}
